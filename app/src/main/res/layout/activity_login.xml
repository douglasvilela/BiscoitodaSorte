<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EB775D48"
    tools:context=".LoginActivity">

    <Button
        android:id="@+id/btnLoginConvidado"
        android:layout_width="165dp"
        android:layout_height="43dp"
        android:backgroundTint="#935635"
        android:text="CONVIDADO"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLoginCadastrar" />

    <Button
        android:id="@+id/btnLoginCadastrar"
        android:layout_width="165dp"
        android:layout_height="43dp"
        android:backgroundTint="#935635"
        android:text="CADASTRAR"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/btnLoginConvidado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLoginEntrar" />

    <Button
        android:id="@+id/btnLoginEntrar"
        android:layout_width="165dp"
        android:layout_height="43dp"
        android:backgroundTint="#935635"
        android:text="ENTRAR"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/btnLoginCadastrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtLoginSenha" />

    <EditText
        android:id="@+id/edtLoginSenha"
        android:layout_width="323dp"
        android:layout_height="40dp"
        android:backgroundTint="#935635"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/btnLoginEntrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtLoginEmail" />

    <EditText
        android:id="@+id/edtLoginEmail"
        android:layout_width="323dp"
        android:layout_height="40dp"
        android:backgroundTint="#935635"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="#FFFFFF"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/edtLoginSenha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="228dp"
        android:layout_height="242dp"
        android:alpha="0.55"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/biscoitologo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.8"
        android:text="BISCOITO DA SORTE"
        android:textColor="#493321"
        android:textSize="16sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toTopOf="@+id/edtLoginEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="339dp"
        android:layout_height="430dp"
        android:layout_marginStart="184dp"
        android:layout_marginTop="8dp"
        android:alpha="0.3"
        android:rotation="93"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLoginConvidado"
        app:srcCompat="@drawable/biscoito_da_sorte" />

</androidx.constraintlayout.widget.ConstraintLayout>